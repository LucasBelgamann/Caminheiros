{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "type": "module",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}